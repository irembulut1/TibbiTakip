
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>Kullanıcı Kaydı Formu</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <div class="container  text-center">
         <br/>
         <br/>
         <h2>Kayıt Ol</h2>

      <div class="form-group col-md-3 container">
          <form action="/Account/Register" method="post">

              <label>İsim</label>
              <input type="text" name="Ad" class="form-control" required>
              <br />


              <label>Soyisim</label>
              <input type="text" name="Soyad" class="form-control" required>
              <br />


              <label>TC Kimlik</label>
              <input type="text" name="TCKimlikNo" class="form-control" required>
              <br />

              <label>Şifre</label>
              <input type="password" name="Sifre" class="form-control" required>
              <br />

              <label>Email</label>
              <input type="email" name="Eposta" class="form-control" required>
              <br />

              <button type="submit" class="btn btn-primary">Kayıt Ol</button>
          </form>
       </div>
    </div>

</body>
</html>
